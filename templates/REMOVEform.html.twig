{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 * En ändring jag har gjort är att fixa upp en egen login form, som du ser  där nere. Jag la till klasser och satta allt i diven login-form-container.
 * @see template_preprocess_form()
 */
#}
{{ attach_library('bootstrap_barrio/form') }}
<div class="login-form-container bg-primary py-5">
  <form{{ attributes.addClass('my-custom-login-class') }}>
    <div class="form-group">
      {{ children }}
    </div>
  </form>
</div>
